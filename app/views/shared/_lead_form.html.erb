<% label = (defined?(cta_label) && cta_label.present?) ? cta_label : "Request a Sample" %>
<a id="lead"></a>
<div class="bg-white border rounded p-6">
  <h3 class="font-semibold text-xl mb-2">Get started</h3>
  <p class="text-sm text-gray-700 mb-4">Tell us about your use case. Weâ€™ll send a sample and set up a demo.</p>
  <%= form_with url: leads_path, method: :post do |f| %>
    <div class="grid md:grid-cols-2 gap-4">
      <div>
        <label class="text-sm">Name</label>
        <%= f.text_field :name, required: true, class: "w-full border rounded px-3 py-2" %>
      </div>
      <div>
        <label class="text-sm">Work Email</label>
        <%= f.email_field :email, required: true, class: "w-full border rounded px-3 py-2" %>
      </div>
      <div>
        <label class="text-sm">Company</label>
        <%= f.text_field :company, required: true, class: "w-full border rounded px-3 py-2" %>
      </div>
      <div>
        <label class="text-sm">Role</label>
        <%= f.text_field :role, required: true, class: "w-full border rounded px-3 py-2" %>
      </div>
      <div>
        <label class="text-sm">Use case</label>
        <%= f.select :use_case, ["CRM Enrichment","Lead Validation","Delivery Address Verification","Duplicate Reduction","Risk & Compliance"], {}, { required: true, class: "w-full border rounded px-3 py-2" } %>
      </div>
      <div>
        <label class="text-sm">City (optional)</label>
        <%= f.text_field :city, class: "w-full border rounded px-3 py-2" %>
      </div>
      <div>
        <label class="text-sm">Industry (optional)</label>
        <%= f.text_field :industry, class: "w-full border rounded px-3 py-2" %>
      </div>
      <div class="flex items-center gap-4">
        <label class="inline-flex items-center gap-2 text-sm"><%= f.check_box :interest_datasets %> Datasets</label>
        <label class="inline-flex items-center gap-2 text-sm"><%= f.check_box :interest_api %> API</label>
      </div>
      <div class="md:col-span-2">
        <label class="inline-flex items-center gap-2 text-sm">
          <%= f.check_box :consent, required: true %> I consent to be contacted per Privacy Policy.
        </label>
      </div>
    </div>
    <div class="mt-4">
      <%= f.submit label, class: "px-4 py-2 bg-blue-600 text-white rounded" %>
    </div>
  <% end %>
  <p class="text-xs text-gray-500 mt-2">We respect DPDP and purpose limitation; unsubscribe anytime.</p>
</div>

