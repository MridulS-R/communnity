<h1 class="text-3xl font-bold mb-4">Login</h1>
<%= form_with url: login_path do |f| %>
  <div class="grid md:grid-cols-2 gap-4">
    <div>
      <label class="text-sm">Work Email</label>
      <%= email_field_tag :email, nil, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>
    <div>
      <label class="text-sm">Password</label>
      <%= password_field_tag :password, nil, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>
  </div>
  <div class="mt-4">
    <%= submit_tag "Login", class: "btn-brand" %>
    <a href="/signup" class="ml-2 link-brand">Create an account</a>
  </div>
<% end %>

