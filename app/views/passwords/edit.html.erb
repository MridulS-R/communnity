<h1 class="text-3xl font-bold mb-4">Reset your password</h1>
<%= form_with url: password_path(params[:id]), method: :put do %>
  <input type="hidden" name="token" value="<%= h params[:token] %>" />
  <div class="grid md:grid-cols-2 gap-4 max-w-2xl">
    <div>
      <label class="text-sm">New password</label>
      <%= password_field_tag :password, nil, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>
    <div>
      <label class="text-sm">Confirm password</label>
      <%= password_field_tag :password_confirmation, nil, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>
  </div>
  <div class="mt-4">
    <%= submit_tag "Reset password", class: "btn-brand" %>
  </div>
<% end %>

