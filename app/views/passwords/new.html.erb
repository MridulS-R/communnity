<h1 class="text-3xl font-bold mb-4">Forgot your password?</h1>
<p class="text-gray-700 mb-4">Enter your work email and weâ€™ll send you a reset link.</p>
<%= form_with url: passwords_path do %>
  <div class="max-w-md">
    <label class="text-sm">Work Email</label>
    <%= email_field_tag :email, nil, required: true, class: "w-full border rounded px-3 py-2" %>
  </div>
  <div class="mt-4">
    <%= submit_tag "Send reset link", class: "btn-brand" %>
    <a href="/login" class="ml-2 link-brand">Back to login</a>
  </div>
<% end %>

